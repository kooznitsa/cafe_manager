{% extends "base.html.twig" %}

{% block title %}Прокофьев и Чайковский{% endblock %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Название</th>
            <th scope="col">Категория</th>
            <th scope="col">Цена, руб.</th>
        </tr>
        </thead>
        <tbody>
        {% for dish in dishes %}
            <tr>
                <td>{{ dish.name }}</td>
                <td>{{ dish.category.name }}</td>
                <td>{{ dish.price }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
