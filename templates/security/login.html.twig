{% extends 'base.html.twig' %}

{% block title %}Вход на сайт{% endblock %}

{% block body %}
<form method="post" class="w-50">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Вы залогинились как {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Выйти</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Войти на сайт</h1>
    <label for="inputEmail"></label>
    <input type="email" placeholder="Эмейл" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword"></label>
    <input type="password" placeholder="Пароль" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me"> Запомнить меня
        </label>
    </div>

    <button class="btn btn-lg btn-primary" type="submit">
        Войти
    </button>
</form>
{% endblock %}
